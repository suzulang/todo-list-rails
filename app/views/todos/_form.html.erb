<%= form_with(model: todo, local: true) do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(todo.errors.count, "个错误") %> 导致无法保存此待办事项：</h2>
      <ul>
        <% todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "标题", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :completed, class: "form-check-input" %>
    <%= form.label :completed, "完成状态", class: "form-check-label" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
