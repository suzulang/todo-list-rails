<h1 class="mb-4">待办事项列表</h1>

<%= link_to '新建待办事项', new_todo_path, class: 'btn btn-primary mb-3' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th>状态</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.completed ? '完成' : '未完成' %></td>
        <td><%= link_to '查看', todo, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to '编辑', edit_todo_path(todo), class: 'btn btn-sm btn-warning' %></td>
        <td><%= button_to '删除', todo, method: :delete, data: { turbo_confirm: '确定要删除这个待办事项吗？' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>